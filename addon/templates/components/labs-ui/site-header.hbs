<header role="banner">
  <a href="https://planninglabs.nyc/" class="labs-beta-notice hide-for-print">A beta project of NYC Planning Labs</a>
  <div class="grid-x grid-padding-x">

    <div class="branding cell shrink  {{if responsiveNav (concat responsiveSize '-auto')}}">
      <a class="dcp-link" href="http://www1.nyc.gov/site/planning/index.page"><img class="dcp-logo" src="https://raw.githubusercontent.com/NYCPlanning/logo/master/dcp_logo_772.png" alt="NYC Planning"></a>
      {{yield (hash title = (component 'labs-ui/site-title'))}}
    </div>

    {{#if responsiveNav}}
      <div class="cell auto hide-for-{{responsiveSize}} text-right">
        <button {{action (mut closed) (not closed)}} class="responsive-nav-toggler hide-for-print">Menu</button>
      </div>
    {{/if}}

    <nav role="navigation" class="cell auto {{if responsiveNav (concat responsiveSize '-shrink')}} {{if (and responsiveNav closed) (concat 'show-for-' responsiveSize)}} hide-for-print">
      {{yield (hash nav = (component 'labs-ui/site-nav'))}}
    </nav>

  </div>
</header>
