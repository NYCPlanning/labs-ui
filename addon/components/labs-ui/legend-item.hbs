<div class="legend-item">
  <div class="grid-x">
    <div class="cell auto">
      <LabsUi::LegendIcon
        @icon={{@item.icon}}
      />
      {{@item.label}}
    </div>
    <div class="cell shrink">
      {{#if @item.tooltip}}
        <LabsUi::icon-tooltip
          @tip={{@item.tooltip}}
          @side="left"
          @fixedWidth={{true}}
        />
      {{/if}}
    </div>
  </div>
</div>
