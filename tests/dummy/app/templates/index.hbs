        <p class="cell bg-teal">.bg-teal</p>
        <p class="cell bg-teal-dark">.bg-teal-dark</p>
        <p class="cell bg-gold">.bg-gold</p>
        <p class="cell bg-gold gold-light">.bg-gold + .gold-light + <span class="gold-dark">.gold-dark</span></p>
